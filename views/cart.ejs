        <main class="bg-light py-5">
            <div class="jumbotron bg-light m-0 w-100 text-center">
                <a class="logo-img" href="/mainpage">
                    <img class="col-md-6" src="/img/logo1.png">
                </a>
            </div>
    		<div class="container-fluid row m-0">
    			<div class="cart-left col-md-8 px-md-5 mb-5 pb-5">

    				<div class="cart-pannel-main container">
                        <% if (session.cart) {
                            var price_total = 0;
                            for (var i=0; i < session.cart.length; i++) { 
                                var price_product = parseFloat(session.cart[i].price);
                                var cart_qty = parseInt(session.cart[i].cart_qty); %>
        						<div class="w-100 border-bottom my-3"></div>
                                <div class="cart-product row align-items-center" product_id="<%= session.cart[i].id %>">
                                	<div class="cart-product-img p-2 col-3">
                                		<img class="w-100" src="/img/img<%= session.cart[i].id %>-1.jpg">
                                	</div>
                                	<div class="cart-product-name col-md-5 col">
                                		<a href="/product/<%= session.cart[i].id %>"><%= session.cart[i].name %></a>
                                	</div>
                                	<div class="w-100 d-md-none d-block"></div>
                                	<div class="cart-product-qty col-md-2 offset-md-0 offset-3 col-4">
                                		<input type="number" value="<%= session.cart[i].cart_qty %>" min="1" max="99" step="1"/>
                                	</div>
                                	<div class="cart-product-price col-md-1 col-3" product_price="<%= session.cart[i].price %>">
                                		<span><%= price_product*cart_qty %>€</span>
                                        <% price_total += price_product*cart_qty %>
                                	</div>
                                	<div class="product-remove col-md-1 col-1">
                                    <form class="form-remove-cart col-1" action="/remove-cart" method="post" product_id="<%= session.cart[i].id %>">
                                		<button type="submit" class="close" aria-label="Close">
                                        	<span aria-hidden="true">&times;</span>
                                    	</button>
                                    </form>
                                	</div>     
                                </div>
                            <% }
                        } else { %>
                            <div class="cart-empty text-center row"> 
                                <span class="col mt-5">Aucun produit dans le panier ...</span>
                            </div>
                        <% } %>
              		</div>
    			</div>
    			
    			<!---------------------------------------------------------------------->

                <% if (session.cart) {
                    var shipping_price = 6.00;
                    price_total = price_total;
                    var price_final = (price_total+shipping_price).toFixed(2);
                } else {
                    var shipping_price = 0;
                    price_total = 0;
                    var price_final = 0;
                } %>
	    		<div class="cart-payout col-md-4">
	    			<div class="sticky-top sticky-offset bg-light shadow rounded p-4">
	    				<div class="row">
	    					<span class="title col-5">TOTAL PANIER</span>
		    			</div>
		    			<div class="w-100 border-bottom my-3"></div>
		    			<div class="row py-3">
		    				<span class="title col-5">SOUS-TOTAL</span>
		    				<span class="price price-sub-total"><%= price_total %>€</span>
		    			</div>
		    			<div class="row py-3">
		    				<span class="title col-5">LIVRAISON</span>
		    				<span class="price price-shipping"><%= shipping_price %>€</span>
		    			</div>
		    			<div class="w-100 border-bottom my-3"></div>
		    			<div class="row pb-5">
			    			<span class="title total col-5">TOTAL</span>
			    			<span class="price price-total"><%=  price_final %>€</span>
			    		</div>
			    		<div class="text-center">
				    		<button class="w-100 btn btn-dark mb-3 payout-button <% if (!price_final) { %> disabled <% } %>" type="submit" name="add-cart">
		    					Passer au payement
		    				</button>
		    				<a href="/mainpage" class="btn btn-light" role="button" name="add-cart">
		    					Continuer les achats
		    				</a>
	    				</div>
	    			</div>
	    		</div>

